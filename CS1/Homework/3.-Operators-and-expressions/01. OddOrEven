using System;

class OddOrEven
{
    static void Main()
    {
        Console.Write("Enter a number: ");
        int number = int.Parse(Console.ReadLine());

        // If the first bit (from the right) is 1 (number & 1 returns 1) then the number is odd and isOdd is assigned "odd",
        // otherwise it's even and isOdd is assigned "even"
        string isOdd = (number & 1) == 1 ? "odd" : "even";
        Console.WriteLine("{0} is an {1} number", number, isOdd);
    }
}
